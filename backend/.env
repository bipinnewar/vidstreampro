# Copy this file to .env and fill in with your values.

# JWT secret used to sign authentication tokens
JWT_SECRET=supersecretkey

# Cosmos DB configuration
COSMOS_DB_ENDPOINT=https://your-account.documents.azure.com:443/
COSMOS_DB_KEY=primary-master-key
COSMOS_DB_DATABASE=vidstreampro
COSMOS_DB_USERS_CONTAINER=users
COSMOS_DB_VIDEOS_CONTAINER=videos
COSMOS_DB_COMMENTS_CONTAINER=comments
COSMOS_DB_RATINGS_CONTAINER=ratings

# Azure Storage configuration
STORAGE_ACCOUNT_NAME=yourstorageaccount
STORAGE_ACCOUNT_KEY=storage-account-key
STORAGE_CONTAINER_NAME=videos

# Azure Cognitive Services (Text Analytics) configuration
AZURE_TEXT_ANALYTICS_ENDPOINT=https://your-text-analytics-resource.cognitiveservices.azure.com/
AZURE_TEXT_ANALYTICS_KEY=your-cognitive-services-key

# Optional: port for local development
PORT=4000